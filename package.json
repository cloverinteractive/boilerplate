  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.client.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.server.js",
    "lint": "yarn eslint --ext .js --ext .jsx ./src",
    "lint:fix": "yarn lint --fix",
    "spec": "yarn spec:single --recursive spec",
    "spec:coverage": "yarn nyc -e .js -e .jsx --exclude=spec/ yarn spec",
    "coverage": "yarn nyc report -e .js -e .jsx --reporter=text-lcov | yarn coveralls",
    "spec:watch": "yarn spec --watch",
    "spec:single": "cross-env NODE_PATH=./src NODE_ENV=test yarn mocha --opts .mocha.opts",
    "start:dev": "cross-env BABEL_ENV=node NODE_PATH=./src nodemon ./src/server --exec babel-node",
    "start:prod": "node build/bundle.js"
  }
